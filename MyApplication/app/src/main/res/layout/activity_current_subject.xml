<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.caitlin.feedbacksave.YearsActivity">

    <ListView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="0.85"
        android:id="@+id/lvFeedback"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.15">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="0.5"
            android:text="@string/add_photo_from_gallery"
            android:id="@+id/addPhotoBtn"
            android:onClick="addPhotoFromGalleryClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="0.5"
            android:text="@string/make_photo"
            android:id="@+id/makePhotoBtn"
            android:onClick="makePhotoClick"/>

    </LinearLayout>
</LinearLayout>
